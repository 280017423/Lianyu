<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#f2f2f2"
	android:orientation="vertical" >
	<RelativeLayout
		android:id="@+id/my_assets_title_layout"
		android:layout_width="fill_parent"
		android:layout_height="@dimen/title_hight"
		android:background="@drawable/default_title_bg" >
		<LinearLayout
			android:id="@+id/title_with_back_title_btn_left"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:gravity="center_vertical"
			android:onClick="onClick"
			android:orientation="horizontal"
			android:paddingLeft="14dp"
			android:visibility="visible" >
			<TextView
				android:id="@+id/register2_tv_title_with_back_left"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/tongyong_fanhui"
				android:duplicateParentState="true"
				android:focusable="false"
				android:textColor="@color/share_detail_show_all"
				android:textSize="@dimen/size_3" />
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:duplicateParentState="true"
				android:focusable="false"
				android:text="在线支付"
				android:textColor="@color/white"
				android:textSize="@dimen/size_1" />
		</LinearLayout>
	</RelativeLayout>
	<View
		android:layout_width="fill_parent"
		android:layout_height="0.7dp"
		android:background="#e0e0e0" />
	<LinearLayout
		android:id="@+id/rl_my_coin_item"
		android:layout_width="fill_parent"
		android:layout_height="88dp"
		android:layout_marginTop="15dp"
		android:background="@color/white"
		android:gravity="center_vertical"
		android:orientation="vertical" >
		<TextView
			android:id="@+id/tv_pay_title"
			android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:gravity="center"
			android:text="你想购买"
			android:textColor="#333333"
			android:textSize="@dimen/size_1" />
		<View
			android:layout_width="fill_parent"
			android:layout_height="0.7dp"
			android:background="#e0e0e0" />
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:layout_gravity="center"
			android:layout_weight="1"
			android:gravity="center"
			android:orientation="horizontal" >
			<ImageView
				android:layout_width="18dp"
				android:layout_height="15dp"
				android:layout_gravity="center_vertical"
				android:background="@drawable/icon_service_price"
				android:contentDescription="@null" />
			<TextView
				android:id="@+id/tv_coin"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:layout_marginLeft="2dp"
				android:text="1200，"
				android:textColor="#A37BBF"
				android:textSize="@dimen/size_1" />
			<TextView
				android:id="@+id/tv_money"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:layout_marginLeft="10dp"
				android:text="￥120元"
				android:textColor="#FF68c3"
				android:textSize="@dimen/size_1" />
		</LinearLayout>
	</LinearLayout>
	<View
		android:layout_width="fill_parent"
		android:layout_height="0.7dp"
		android:background="#e0e0e0" />
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="15dp"
		android:text="支付方式"
		android:textColor="#c5c5c5"
		android:textSize="@dimen/size_3" />
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="56dp"
		android:layout_marginTop="15dp"
		android:background="@color/white"
		android:gravity="center_vertical"
		android:orientation="horizontal" >
		<ImageView
			android:layout_width="26dp"
			android:layout_height="26dp"
			android:layout_marginLeft="25dp"
			android:background="@drawable/pay_checked"
			android:contentDescription="@null" />
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="10dp"
			android:text="支付宝支付"
			android:textColor="#FF68c3"
			android:textSize="@dimen/size_1" />
	</LinearLayout>
	<Button
		android:id="@+id/btn_pay"
		android:layout_width="176dp"
		android:layout_height="36dp"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="30dp"
		android:background="@drawable/btn_sign_bg"
		android:gravity="center"
		android:onClick="onClick"
		android:text="确认支付"
		android:textColor="@color/white"
		android:textSize="@dimen/size_2" />
</LinearLayout>