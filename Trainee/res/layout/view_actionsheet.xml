<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#9F000000"
    android:gravity="bottom" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/divider_line_color_dark"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_action_sheet_title"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text="添加照片"
            android:textColor="#999999"
            android:textSize="@dimen/size_3" />

        <Button
            android:id="@+id/btn_set_head"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="0.7dp"
            android:background="@drawable/setting_item_bg"
            android:gravity="center"
            android:text="设置头像"
            android:textColor="#007aff"
            android:textSize="@dimen/size_1"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_del_photo"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="0.7dp"
            android:background="@drawable/setting_item_bg"
            android:gravity="center"
            android:text="删除照片"
            android:textColor="#007aff"
            android:textSize="@dimen/size_1"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_action_2"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="0.7dp"
            android:background="@drawable/setting_item_bg"
            android:gravity="center"
            android:textColor="#007aff"
            android:textSize="@dimen/size_1"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_action_1"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="0.7dp"
            android:background="@drawable/setting_item_bg"
            android:gravity="center"
            android:textColor="#007aff"
            android:textSize="@dimen/size_1"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/setting_item_bg"
            android:gravity="center"
            android:text="取消"
            android:textColor="#007aff"
            android:textSize="@dimen/size_1"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>