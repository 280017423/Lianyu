<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#9F000000"
    android:gravity="bottom" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/divider_line_color_dark"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text="根据缓存文件大小不同，清理过程花费时间也不同，请耐心等待"
            android:textColor="#999999"
            android:textSize="@dimen/size_3" />

        <Button
            android:id="@+id/btn_clean_cache"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="0.7dp"
            android:background="@drawable/setting_item_bg"
            android:gravity="center"
            android:text="清理缓存"
            android:textColor="#007aff"
            android:textSize="@dimen/size_1"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_clean_cache_cancel"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/setting_item_bg"
            android:gravity="center"
            android:text="取消"
            android:textColor="#007aff"
            android:textSize="@dimen/size_1"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>