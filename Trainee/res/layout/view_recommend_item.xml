<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@drawable/recommend_item_bg"
	android:descendantFocusability="blocksDescendants"
	android:paddingBottom="10dp" >
	<com.xhr.framework.widget.RoundCornerImageView
		xmlns:app1="http://schemas.android.com/apk/res-auto"
		android:id="@+id/iv_img"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/recommend_item_img_bg"
		android:contentDescription="@null"
		android:focusable="false"
		android:scaleType="fitXY"
		app1:roundHeight="5dp"
		app1:roundLeftBottom="false"
		app1:roundRightBottom="false"
		app1:roundWidth="5dp" />
	<ImageView
		android:id="@+id/iv_play"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@id/iv_img"
		android:layout_alignLeft="@id/iv_img"
		android:layout_marginBottom="10dp"
		android:layout_marginLeft="10dp"
		android:background="@drawable/icon_play"
		android:contentDescription="@null" />
	<TextView
		android:id="@+id/tv_content"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/iv_img"
		android:layout_marginTop="5dp"
		android:ellipsize="end"
		android:padding="5dp"
		android:singleLine="true"
		android:textColor="#A9A9A9"
		android:textSize="@dimen/size_3" />
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/tv_content"
		android:orientation="horizontal" >
		<Button
			android:id="@+id/btn_nickname"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@null"
			android:ellipsize="end"
			android:paddingLeft="5dp"
			android:paddingRight="25dp"
			android:singleLine="true"
			android:textColor="#FF84CD"
			android:textSize="@dimen/size_3" />
		<ImageView
			android:id="@+id/iv_level"
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:layout_alignRight="@id/btn_nickname"
			android:layout_centerVertical="true"
			android:contentDescription="@null" />
	</RelativeLayout>
</RelativeLayout>