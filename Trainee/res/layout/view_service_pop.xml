<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="88dp"
    android:background="@drawable/service_pop_bg"
    android:orientation="vertical"
    android:padding="10dp" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <View
            style="@style/divider_line_style_dark"
            android:layout_centerInParent="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#fefefe"
            android:gravity="center"
            android:text="基础体验"
            android:textColor="#333333"
            android:textSize="@dimen/size_2" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_left_time_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="恋爱倒计时"
            android:textColor="#333333"
            android:textSize="@dimen/size_3" />

        <TextView
            android:id="@+id/tv_left_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_left_time_info"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="00:00:00"
            android:textColor="#a782c1"
            android:textSize="@dimen/size_3" />

        <Button
            android:id="@+id/btn_complain"
            android:layout_width="60dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_complain_bg"
            android:gravity="center"
            android:textColor="#ff8ed2"
            android:textSize="@dimen/size_3" />
    </RelativeLayout>

</LinearLayout>